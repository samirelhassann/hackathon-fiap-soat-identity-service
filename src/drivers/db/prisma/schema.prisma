generator user {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  taxVat       String   @unique
  passwordHash String
  phone        String
  isAdmin      Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  locations Location[]
  doctors   Doctor[]

  @@map("users")
}

model Location {
  id          String   @id @default(uuid())
  userId      String   @unique
  latitude    Float
  longitude   Float
  zipCode     String
  street      String
  number      Int
  observation String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("locations")
}

model Doctor {
  id            String   @id @default(uuid())
  userId        String   @unique
  crm           String   @unique
  specialty     String
  averageRating Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("doctors")
}
